<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.palamfairy.project.android.palamfairygame.MainActivity"
    android:background="@drawable/bagset">

    <ImageView
        android:id="@+id/petViewImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        app:srcCompat="@drawable/pet"
        />

    <!--<android.support.design.widget.AppBarLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:theme="@style/AppTheme.AppBarOverlay">-->

        <!--<android.support.v7.widget.Toolbar-->
            <!--android:id="@+id/toolbar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="?attr/actionBarSize"-->
            <!--android:background="?attr/colorPrimary"-->
            <!--app:popupTheme="@style/AppTheme.PopupOverlay" />-->

    <!--</android.support.design.widget.AppBarLayout>-->

    <!--<include layout="@layout/content_main" />-->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <ImageView
        android:id="@+id/toileA"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/petViewImage"
        android:layout_marginBottom="129dp"
        android:layout_marginStart="196dp"
        android:layout_toEndOf="@+id/fab"
        app:srcCompat="@drawable/unti" />

    <ImageView
        android:id="@+id/toileB"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/toileA"
        android:layout_marginStart="140dp"
        android:layout_marginTop="38dp"
        android:layout_toEndOf="@+id/petViewImage"
        app:srcCompat="@drawable/unti" />

    <ImageView
        android:id="@+id/toileC"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/toileA"
        android:layout_alignStart="@+id/toileB"
        android:layout_marginBottom="35dp"
        app:srcCompat="@drawable/unti" />

    <ImageView
        android:id="@+id/toileD"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/toileC"
        android:layout_marginStart="92dp"
        android:layout_toEndOf="@+id/fab"
        app:srcCompat="@drawable/unti" />

</RelativeLayout>
